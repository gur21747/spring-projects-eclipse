<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="myorg"
		class="com.learning.springdemo.domain.Organization">
		<constructor-arg value="Google" index="0" name="companyName"></constructor-arg>
		<constructor-arg value="1996" index="1"
			name="yearOfIncorporation">
		</constructor-arg>
		<property name="postalCode" value="65655 "></property>
		<property name="employeeCount" value="75000"></property>
		<property name="slogan" value='"Organize the information of the world"'></property>
		<property name="businessService" ref="ecommService"></property>
	</bean>
	<bean id="cloudService"
		class="com.learning.springdemo.serviceimpl.CloudServiceImpl">
	</bean>
	<bean id="ecommService"
		class="com.learning.springdemo.serviceimpl.EcommerceServiceImpl">
	</bean>
	<bean
		class="com.learning.springdemo.serviceimpl.AgencyRecruitmentServiceImpl"
		id="agency">
	</bean>
	<bean id="referral"
		class="com.learning.springdemo.serviceimpl.ReferralRecruitmentServiceImpl">
	</bean>
	<bean id="myhrdept"
		class="com.learning.springdemo.domain.HumanResourceDept">
	<constructor-arg name="recruitmentService" ref="referral"></constructor-arg>
	<constructor-arg name="organization" ref="myorg"></constructor-arg>
	<property name="deptName" value="HR DEPARTMENT"></property>
	</bean>
</beans>
